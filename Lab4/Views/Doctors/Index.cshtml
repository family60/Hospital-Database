@model IEnumerable<Lab4.Models.Doctor>

@{
    ViewBag.Title = "Doctors";
}

<h2>Doctors</h2>
<!--Action Links To Navigate -->
@Html.ActionLink("Home", "Index", "Home") |
@Html.ActionLink("Doctors", "Index", "Doctors") |
@Html.ActionLink("Patients", "Index", "Patients") |
@Html.ActionLink("Visits", "Index", "Visits")


<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (@Html.BeginForm("Index", "Doctors", FormMethod.Get))
{
    <!--To Search By Two Id (Name,Office)-->
    <b>Search By:</b>
    @Html.RadioButton("SearchBy", "Name", true) <text> Name </text>
    @Html.RadioButton("SearchBy", "Office", true) <text> Office </text>
    <br />
    @Html.TextBox("Search") <input type="submit" value="Search"/>
}
<table class="table">
    <tr>
        <!--Displaying The Table-->
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Office)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Office)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telephone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <!--Action links For Editing,Details,Delete-->
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
