@model IEnumerable<Lab4.Models.Patient>

@{
    ViewBag.Title = "Patients";
}

<h2>Patients</h2>

@Html.ActionLink("Home", "Index", "Home") |
@Html.ActionLink("Doctors", "Index", "Doctors") |
@Html.ActionLink("Patients", "Index", "Patients") |
@Html.ActionLink("Visits", "Index", "Visits")


<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (@Html.BeginForm("Index", "Patients", FormMethod.Get))
{
    <b>Search by:</b>
    @Html.RadioButton("SearchBy", "Name", true)<text>Name</text>
    @Html.RadioButton("SearchBy", "Email")<text>Email</text>
    <br />
    @Html.TextBox("search")
    <input type="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th>
            @Html.DisplayName("Date of Birth")
        </th>
        <th>
            @Html.DisplayName("Doctor's Name")
        </th>
        <th>
            @Html.DisplayName("Admitted")
        </th>
        <th>
            @Html.DisplayName("Discharged")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Telephone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DOB)
    </td>
    <td>
        @Html.ActionLink(item.Doctor.Name, "Details", "Doctors", new { id = item.DoctorId }, null)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Admitted)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Discharged)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>
