@model IEnumerable<Lab4.Models.Visit>

@{
    ViewBag.Title = "Visits";
}

<h2>Visits</h2>

@Html.ActionLink("Home", "Index", "Home") |
@Html.ActionLink("Doctors", "Index", "Doctors") |
@Html.ActionLink("Patients", "Index", "Patients") |
@Html.ActionLink("Visits", "Index", "Visits")


<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (@Html.BeginForm("Index", "Visits", FormMethod.Get))
{
    <b>Search by:</b>
    @Html.RadioButton("SearchBy", "DateOfVisit", true)<text>Date Of Visit</text>
    @Html.RadioButton("SearchBy", "Complaint")<text>Complaint</text>
    <br />
    @Html.TextBox("search")
    <input type="submit" value="Search" />
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateOfVisit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Complaint)
        </th>
        <th>
            @Html.DisplayName("Doctor's Name")
        </th>
        <th>
            @Html.DisplayName("Patient's Name")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfVisit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Complaint)
            </td>
            <td>
                @Html.ActionLink(item.Doctor.Name, "Details", "Doctors", new { id = item.DoctorId }, null)
            </td>
            <td>
                @Html.ActionLink(item.Patient.Name, "Details", "Patients", new { id = item.PatientId }, null)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
